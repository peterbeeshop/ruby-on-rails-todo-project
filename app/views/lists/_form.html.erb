
  <%= form_with(model: list) do |form| %>
    <% if list.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

        <ul>
          <% list.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, class:"border border-[#D1D5DB] rounded-md pl-4 w-[100%] h-[40px] shadow-[0px_1px_2px_rgba(0,0,0,0.5)]" %>
    </div>

    <div>
      <%= form.submit "Create list", class:'w-[100%] bg-[#4F46E5] h-[38px] rounded-md text-[#fff]' %>
    </div>
  <% end %>
