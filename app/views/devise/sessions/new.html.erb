<div class="flex justify-center items-center flex-col w-[100%] min-h-screen">
  <%= image_tag 'logo.png', class:"mb-4 mt-6" %>
  <h1 class="font-bold text-3xl mb-4 not-italic ">Log in to your account</h1>

  <div class="bg-[#ffffff] shadow-[0px_1px_3px_rgba(0,0,0,0.1),0px_1px_2px_rgba(0,0,0,0.6)] w-[448px] h-[370px] px-[40px] py-[32px] rounded-lg ">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-6">
        <%= f.label :Email_address, class:"text-[#374151] pb-[2px]" %><br />
        <%= f.email_field :email, autocomplete: "email", class:"border border-[#D1D5DB] rounded-md pl-4 w-[100%] h-[40px] shadow-[0px_1px_2px_rgba(0,0,0,0.5)]" %>
      </div>

      <div class="field">
        <%= f.label :password,class:"text-[#374151] pb-[2px]" %><br />
        <%= f.password_field :password, autocomplete: "current-password",class:"border border-[#D1D5DB] rounded-md pl-4 w-[100%] h-[40px] shadow-[0px_1px_2px_rgba(0,0,0,0.5)]" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex justify-between	my-6">
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <%= link_to 'forgot your password?', new_user_password_path, class: 'text-[#4F46E5]' %>
        </div>
      <% end %>

      <div>
        <p class="mb-6 text-[#111827] ">Don't have an account? Create one <%= link_to 'here', new_user_registration_path, class: 'border-b border-black text-[#111827] ' %></p>
      </div>

      <div class="actions">
        <%= f.submit "Log in",class: 'w-[100%] bg-[#4F46E5] h-[38px] rounded-md text-[#fff] ' %>
      </div>
    <% end %>
  </div>
  <div>
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
</div>
