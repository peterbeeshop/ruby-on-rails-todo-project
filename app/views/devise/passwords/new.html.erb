<div class="flex justify-center items-center flex-col min-h-screen">
  <%= image_tag 'logo.png', class:"mb-4" %>
  <h1 class="font-bold text-3xl mb-4 not-italic ">Reset your password</h1>

  <div class="bg-[#ffffff] shadow-[0px_1px_3px_rgba(0,0,0,0.1),0px_1px_2px_rgba(0,0,0,0.6)] w-[448px] h-[192px] px-[40px] py-[32px] rounded-lg ">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-6">
        <%= f.label :Enter_your_email_address, class:"text-[#374151] pb-[2px]" %><br />
        <%= f.email_field :email, autocomplete: "email", class:"border border-[#D1D5DB] rounded-md pl-4 w-[100%] h-[40px] shadow-[0px_1px_2px_rgba(0,0,0,0.5)]" %>
      </div>

      <div class="actions">
        <%= f.submit "Send reset email", class: 'w-[100%] bg-[#4F46E5] h-[38px] rounded-md text-[#fff] ' %>
      </div>
    <% end %>
  </div>
</div>
